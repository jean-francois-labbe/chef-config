<h1>Chef config</h1>
<h2>Cookbooks</h2>
<form class="pure-form pure-form-stacked">
	<% @cookbooks.each do |c| %>
		<fieldset>
			<legend><%= c.name %></legend>
			<% c.attributes.each do |a| %>

					<label for="name"><%= a[:param] %></label>
					<input id="name" type="text" placeholder="<%= a[:value] %>">
			<% end %>
		</fieldset>
	<% end %>
</form>
<form class="pure-form pure-form-aligned">
	<% @cookbooks.each do |c| %>
		<fieldset>
			<legend><%= c.name %></legend>
			<% c.attributes.each do |a| %>
				<div class="pure-g">

					<label for="name" class="pure-u-1-3"><%= a[:param] %></label>
					<input id="name" class="pure-u-2-3" type="text" placeholder="<%= a[:value] %>">
				</div>
			<% end %>
		</fieldset>
	<% end %>
</form>
